<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="20dp"


    android:paddingEnd="20dp">

  <androidx.cardview.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="5dp"
      app:cardCornerRadius="20dp"
      app:cardElevation="10dp"
      app:cardMaxElevation="12dp"
      app:cardPreventCornerOverlap="true"
      app:cardUseCompatPadding="true">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/gradient">

    <TextView
        android:id="@+id/mode_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:textStyle="bold"
        android:fontFamily="google-sans-medium"
        android:paddingTop="@dimen/home_page_mode_item_title_padding_top"
        android:paddingBottom="@dimen/home_page_mode_item_title_padding_bottom"
        android:textColor="@color/bounding_box_gradient_end"
        android:textSize="@dimen/home_page_mode_item_title_size" />

    <TextView
        android:id="@+id/mode_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:paddingLeft="10dp"
        android:textStyle="italic"
        android:paddingBottom="@dimen/home_page_mode_item_subtitle_padding_bottom"
        android:textColor="@color/white"
        android:textSize="@dimen/home_page_mode_item_subtitle_size" />
</LinearLayout>
  </androidx.cardview.widget.CardView>

</LinearLayout>
